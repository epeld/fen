category:            Data
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable fen
  main-is:             Main.hs
  build-depends:       base >=4.7 && <4.8, containers >=0.5 && <0.6, mtl == 2.1.*, monadplus >=1.4 && <1.5, split >=0.2 && <0.3, parsec >=3.1 && <3.2, HUnit >=1.2 && <1.3, hspec >=2.1 && <2.2, QuickCheck >=2.6 && <2.7, lens >= 4.11, transformers >= 0.4.3.0
